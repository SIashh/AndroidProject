<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondhearstone">


    <Spinner
        android:id="@+id/spinnerClasse"
        android:layout_width="264dp"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewRace"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.636" />

    <Spinner
        android:id="@+id/spinnerRace"
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewClasse"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerFaction" />

    <Spinner
        android:id="@+id/spinnerFaction"
        android:layout_width="266dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewType"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerType" />

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="265dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewFaction"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerClasse" />


    <TextView
        android:id="@+id/textViewClasse"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/mytitle"
        android:gravity="center"
        android:text="Race"
        android:textColor="@color/mySpinnerTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textViewType"
        app:layout_constraintTop_toBottomOf="@+id/spinnerFaction" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/mytitle"
        android:gravity="center"
        android:text="Faction"
        android:textColor="@color/mySpinnerTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textViewFaction"
        app:layout_constraintTop_toBottomOf="@+id/spinnerType" />

    <TextView
        android:id="@+id/textViewFaction"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/mytitle"
        android:gravity="center"
        android:text="Type"
        android:textColor="@color/mySpinnerTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/textViewRace"
        app:layout_constraintTop_toBottomOf="@+id/spinnerClasse" />

    <TextView
        android:id="@+id/textViewRace"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:background="@drawable/mytitle"
        android:gravity="center"
        android:text="Classe"
        android:textColor="@color/mySpinnerTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="344dp"
        android:layout_height="134dp"
        app:srcCompat="@mipmap/hearthstone_2016_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp" />
</android.support.constraint.ConstraintLayout>