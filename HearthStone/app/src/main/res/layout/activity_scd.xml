<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgfirst">


    <Spinner
        android:id="@+id/spinnerRace"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerFaction"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerFaction" />

    <Spinner
        android:id="@+id/spinnerFaction"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerType"
        android:layout_marginLeft="-21dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerType" />

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerClasse"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerClasse" />

    <Spinner
        android:id="@+id/spinnerClasse"
        android:background="@drawable/myspinner"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.635" />


    <TextView
        android:id="@+id/textViewClasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Race"
        android:textColor="@color/mySpinnerTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/spinnerRace"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerRace"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerRace"
        app:layout_constraintHorizontal_bias="0.352" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="39dp"
        android:textStyle="bold"
        android:text="Faction"
        android:textColor="@color/mySpinnerTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerFaction"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerFaction"
        app:layout_constraintRight_toRightOf="@+id/spinnerFaction" />

    <TextView
        android:id="@+id/textViewFaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="39dp"
        android:textStyle="bold"
        android:text="Type"
        android:textColor="@color/mySpinnerTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerType"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerType"
        app:layout_constraintRight_toRightOf="@+id/spinnerType" />

    <TextView
        android:id="@+id/textViewRace"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="39dp"
        android:text="Classe"
        android:textColor="@color/mySpinnerTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerClasse"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerClasse"
        app:layout_constraintRight_toRightOf="@+id/spinnerClasse" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="344dp"
        android:layout_height="134dp"
        app:srcCompat="@mipmap/hearthstone_2016_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>